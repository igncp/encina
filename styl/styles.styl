@import _sticky-footer

a
  font-weight bold
  &:hover
    text-decoration none

body
  font-family 'Overlock', cursive
  font-size 16px
  text-shadow 1px 1px 0.5px #eee

footer
  background-color #E9F0EB
  border-top 4px solid #AFCDE0
  text-align center
  overflow hidden

footer, #container
  opacity 0
  transition opacity 1s linear

h1
  font-family 'Raleway', sans-serif
  font-size 40px
  small
    font-size 20px

ul
  list-style none
  padding 0
  margin 0
  li
    margin-bottom 10px
    padding-left 2em 
    text-indent -.7em
    &:before
      content "\2730 "
      color #6A746B
      font-size 20px
      padding-right 5px

.gh-buttons
  padding-top 30px
  text-align right
  .star-btn
    margin-left 9px

pre.code
  display inline-block
  box-shadow 0px 0px 5px 1px #E5E5E5
  padding 20px
.glyphicon
  font-size 25px
  height auto
  margin-right 5px
  &.glyphicon-tree-deciduous
    color #7F9E7E
  &.glyphicon-book
    color #A59F61
  &.glyphicon-tint
    color #9DBCCA

.panel
  margin 20px 0 30px 
  padding 15px 10px 10px
   
.panel-default
  border-color #ccc

.page-header
  margin-top 0px
  
.row
  margin 0px


#container
  padding-bottom 50px

#footer-shadow
  height 0
  box-shadow 0 1px 10px 1px #777

#footer-text
  margin-top 25px